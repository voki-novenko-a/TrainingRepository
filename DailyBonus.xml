			<Reward day="7" type="BombAndLineBoost" count="1"/>
		</Page>
		<Page id="Aircraft" photo="DailyBonusPhoto_Aircraft">
			<Reward day="1" type="MultiplyFishBoost" count="1"/>
			<Reward day="2" type="BombAndLineBoost" count="1"/>
